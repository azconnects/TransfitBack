<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_color"
    android:layout_height="match_parent"
    tools:context="com.example.azconnects.transfit.Update_vehicle">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:id="@+id/regbookpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/regbook"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regbookpic"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@color/fbcolor">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Enter car name like 'Mehran-07'"
            android:id="@+id/carname_et"
            android:focusable="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Enter registration like 'led-6565'"
            android:id="@+id/regno_et"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/white"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/fbcolor"
        android:text="Update"
        android:id="@+id/updatebtn"
       />
</RelativeLayout>
