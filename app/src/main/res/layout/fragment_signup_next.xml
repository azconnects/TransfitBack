<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical"
    tools:context="com.example.azconnects.transfit.ProfileManagement.SignupNext">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agreement"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditionsvAccept the terms and conditionsAccept the terms and conditionsAccept the terms and conditions"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_transparent_background"
        android:text="Accept"
        android:id="@+id/agreement_accept_btn"
        android:textColor="@color/white"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_transparent_background"
        android:text="NOt Accept"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/agreement_deny_btn"
        android:textColor="@color/white"/>

</LinearLayout>
